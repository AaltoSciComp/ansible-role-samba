# for all options see http://www.samba.org/samba/docs/man/manpages-3/smb.conf.5.html

[global]
# params from ansible
{% for item in samba_global %}
  {{ item.keys() | first }} = {{ item.values() | first }}
{% endfor %}


# shares                                                                                                                                     
{% for share in samba_shares %}

[{{ share }}]
{% for item in samba_shares[share] %}
  {{ item.keys() | first }} = {{ item.values() | first }}
{% endfor %}
{% endfor %}

